<UserControl x:Class="Client.Client.Control.UserOnlineStatusIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="Border" x:Key="offline">
            <Setter Property="Background" Value="#FFC4C4C4"/>
            <Setter Property="BorderBrush" Value="Gray"/>
        </Style>
        <Style TargetType="Border" x:Key="online">
            <Setter Property="Background" Value="#FF99DE00"/>
            <Setter Property="BorderBrush" Value="#FF5EC200"/>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Width="10" Height="10">
        <Border Name="bg" BorderThickness="1" CornerRadius="1" Style="{StaticResource ResourceKey=offline}"/>
    </Grid>
</UserControl>
