<UserControl x:Class="Client.Client.Control.ChooseIconButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="60" Height="60">

    <Grid x:Name="LayoutRoot" Cursor="Hand"
          MouseEnter="OnHover" MouseLeave="OnUnhover" MouseLeftButtonDown="OnClick">
        <Border Name="bg" BorderThickness="1" BorderBrush="Gray" Visibility="Collapsed">
            <Border.Background>
                <SolidColorBrush Color="Black" Opacity="0.4"/>
            </Border.Background>
        </Border>
        <Image Name="img" Source="icon/41.png"/>
    </Grid>
</UserControl>
