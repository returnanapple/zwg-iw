<UserControl x:Class="IWorld.Client.SharkRotateItemCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Name="rotateItem"
    d:DesignHeight="64" d:DesignWidth="56" Width="60" Height="68">
    
    <UserControl.Resources>
        <DropShadowEffect x:Key="selectEffect" Color="#00FAFA" BlurRadius="120" Direction="360" ShadowDepth="0"/>
    </UserControl.Resources>

    <Border Name="bd" BorderBrush="Transparent" BorderThickness="1" CornerRadius="10">
        <Grid x:Name="LayoutRoot">
            <Image x:Name="image" Source="{Binding ElementName=rotateItem,Path=RotateItemImagePath}" Width="56" Height="64"/>
        </Grid>
    </Border>
</UserControl>
