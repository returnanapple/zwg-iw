<UserControl x:Class="IWorld.Client.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <Grid x:Name="LayoutRoot" MinHeight="300" MinWidth="400" Background="Black">
        <Image Source="img/download.png" Height="86" HorizontalAlignment="Center" 
               VerticalAlignment="Center" Cursor="Hand"
               MouseEnter="Image_MouseEnter" MouseLeave="Image_MouseLeave" 
               MouseLeftButtonDown="Image_MouseLeftButtonDown"></Image>
    </Grid>
</UserControl>
