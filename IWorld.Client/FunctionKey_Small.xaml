<UserControl x:Class="IWorld.Client.FunctionKey_Small"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:client="clr-namespace:IWorld.Client.Class;assembly=IWorld.Client.Class"
    mc:Ignorable="d">

    <Grid x:Name="root" Width="60" Height="30" Cursor="Hand" 
          MouseLeftButtonDown="Click">
        <Grid.Background>
            <SolidColorBrush Color="Black" Opacity="0"/>
        </Grid.Background>
        <i:Interaction.Triggers>
            <client:NButtonFeedbackTrigger NBTOffset="1" ReplyWhenClick="True"/>
        </i:Interaction.Triggers>
        <Image Name="img" Width="30" Height="20" Source="img/icons_down.png"
                           HorizontalAlignment="Left"></Image>
        <TextBlock Name="tb" Text="提现" HorizontalAlignment="Right" VerticalAlignment="Center" 
                               TextDecorations="Underline"></TextBlock>
    </Grid>
</UserControl>
