<UserControl x:Class="IWorld.Client.SharkInfoTipCtrl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Name="sharkTip"
    d:DesignHeight="44" d:DesignWidth="290" Foreground="White" Width="280" Height="38">
    <UserControl.Resources>
        <DropShadowEffect x:Key="selectEffect" Color="#4BD8E6" BlurRadius="20" Direction="360" ShadowDepth="0"/>
    </UserControl.Resources>
    <Border Name="bd" BorderBrush="Transparent" BorderThickness="1" CornerRadius="10">
        <Grid x:Name="LayoutRoot">
            <Grid.Background>
                <ImageBrush ImageSource="img/shark/shark_selectbetbg.png"/>
            </Grid.Background>
            <TextBlock  Width="50" Text="{Binding ElementName=sharkTip,Path=TipTitle}"  FontSize="13"  Margin="6,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Opacity="0.95"/>
            <TextBlock Width="190" Text="{Binding ElementName=sharkTip,Path=TipContnet}" FontSize="13" Margin="80,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Opacity="0.95"/>
        </Grid>
    </Border>
</UserControl>
