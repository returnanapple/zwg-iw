<controls:ChildWindow x:Class="IWorld.Client.ExchangesPage_ExchangeTool"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
           HasCloseButton="False" Style="{StaticResource ResourceKey=cw_noBg}">
    
    <toolkit:ExpressionDarkTheme>
        <Canvas Width="420" Height="110">
            <Canvas.Background>
                <ImageBrush ImageSource="img/images/BaseDialog.png"></ImageBrush>
            </Canvas.Background>
            <TextBlock Text="活动：" Canvas.Left="38" Canvas.Top="27" FontSize="15"/>
            <TextBlock Text="兑换数量：" Canvas.Left="10" Canvas.Top="56" FontSize="15"/>

            <TextBlock Name="text_title" Text="我是活动 我是可爱的活动" Canvas.Left="88" Canvas.Top="27" FontSize="15" Width="206"/>
            <TextBox Style="{StaticResource AppTextBoxStyle}" Name="input_sum" Width="120" Canvas.Left="88" Canvas.Top="53"/>

            <Button Content="兑  换" Style="{StaticResource midBtnStyle}" Canvas.Left="333" Canvas.Top="21" Width="60" Click="Enter"/>
            <Button Content="取  消" Style="{StaticResource midBtnStyle}" Canvas.Left="333" Canvas.Top="54" Width="60" Click="Cancel"/>
        </Canvas>
    </toolkit:ExpressionDarkTheme>
</controls:ChildWindow>