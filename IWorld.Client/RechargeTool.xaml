<controls:ChildWindow x:Class="IWorld.Client.RechargeTool"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
           HasCloseButton="False" Style="{StaticResource ResourceKey=cw_noBg}">
    
    <toolkit:ExpressionDarkTheme>
        <Canvas Background="Black" Width="360" Height="110">
            <TextBlock Text="用户：" Canvas.Left="34" Canvas.Top="27"/>
            <TextBlock Text="金额：" Canvas.Left="34" Canvas.Top="56"/>
            
            <TextBlock Name="text_user" Text="admin（本人）" Canvas.Left="88" Canvas.Top="27"/>
            <TextBox Name="input_sum" Width="120" Canvas.Left="88" Canvas.Top="53"/>
            
            <Button Content="充  值" Canvas.Left="277" Canvas.Top="25" Width="60" Click="Recharge"/>
            <Button Content="取  消" Canvas.Left="277" Canvas.Top="54" Width="60" Click="Cancel"/>
        </Canvas>
    </toolkit:ExpressionDarkTheme>
</controls:ChildWindow>