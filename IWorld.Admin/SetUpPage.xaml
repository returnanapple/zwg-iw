        </Style>
        <Style TargetType="Rectangle" x:Key="topBg_normal">
            <Setter Property="Fill" Value="#FF4B423F"></Setter>
            <Setter Property="Opacity" Value="0.55"></Setter>
        </Style>
        <Style TargetType="Rectangle" x:Key="topBg_selected">
            <Setter Property="Fill" Value="White"></Setter>
        </Style>
