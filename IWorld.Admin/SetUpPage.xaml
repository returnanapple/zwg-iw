            <Setter Property="Foreground" Value="#B9A894"></Setter>
        </Style>
        <Style TargetType="sdk:Label" x:Key="side_seletcted">
            <Setter Property="Foreground" Value="#333"></Setter>
        </Style>
        <Storyboard x:Key="promt_close">
            <DoubleAnimation
                Storyboard.TargetName="frame_promt"
                Storyboard.TargetProperty="Height"
                From="70" To="0" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="promt_open">
            <DoubleAnimation
                Storyboard.TargetName="frame_promt"
                Storyboard.TargetProperty="Height"
                From="0" To="70" Duration="0:0:0.3" />
        </Storyboard>
        <Storyboard x:Key="page_close">
            <DoubleAnimation
                Storyboard.TargetName="root"
                Storyboard.TargetProperty="Opacity"
                From="70" To="0" Duration="0:0:0.3" />
        </Storyboard>
    </UserControl.Resources>

