            <Grid Name="module_manager" Height="159" Grid.Row="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="47"></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#2E2520">
                    <Rectangle Width="200" Height="1" Fill="#423732" VerticalAlignment="Top"></Rectangle>
                    <Rectangle Width="200" Height="1" Fill="#2C2523" VerticalAlignment="Bottom"></Rectangle>
                    <sdk:Label Content="管理员组" HorizontalAlignment="Center"
                               FontSize="16" Foreground="#B9A894" FontFamily="font/msyh.ttc#Microsoft Yahei"></sdk:Label>
                </Grid>
                <Grid Grid.Row="1">
                    <sdk:Label Name="sideButton_examineMangers" Content="查看管理员列表" 
                               HorizontalAlignment="Right" Margin="0,0,20,0" Cursor="Hand"
                               FontSize="12" FontFamily="font/msyh.ttc#Microsoft Yahei" 
                               Style="{StaticResource ResourceKey=side_normal}"></sdk:Label>
                </Grid>
                <Grid Grid.Row="2">
                    <sdk:Label Name="sideButton_examineManagerGroups" Content="查看管理员用户组" 
                               HorizontalAlignment="Right" Margin="0,0,20,0" Cursor="Hand"
                               FontSize="12" FontFamily="font/msyh.ttc#Microsoft Yahei" 
                               Style="{StaticResource ResourceKey=side_normal}"></sdk:Label>
                </Grid>
                <Grid Grid.Row="3">
                    <sdk:Label Name="sideButton_managerLandingRecords" Content="查看后台登入记录" 
                               HorizontalAlignment="Right" Margin="0,0,20,0" Cursor="Hand"
                               FontSize="12" FontFamily="font/msyh.ttc#Microsoft Yahei" 
                               Style="{StaticResource ResourceKey=side_normal}"></sdk:Label>
                </Grid>
                <Grid Grid.Row="4">
                    <sdk:Label Name="sideButton_managedRecords" Content="查看管理记录" Visibility="Collapsed"
                               HorizontalAlignment="Right" Margin="0,0,20,0" Cursor="Hand"
                               FontSize="12" FontFamily="font/msyh.ttc#Microsoft Yahei" 
                               Style="{StaticResource ResourceKey=side_normal}"></sdk:Label>
                </Grid>
            </Grid>
        </Grid>
        <!--以上是侧边栏-->
        <!--主体-->
        <Grid Grid.Column="1" Grid.Row="1" Background="White">
            <Grid Width="912" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <!--信息提示栏-->
                <Grid Name="frame_promt" Height="70" VerticalAlignment="Top" Margin="0,0,0,40" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="46"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border Background="#F8F2B7" BorderBrush="#DBD6A1" BorderThickness="1" CornerRadius="3"
                            Grid.ColumnSpan="3"></Border>
                    <Image Width="16" Height="16" Source="img/exclamation.png" Grid.Column="0"></Image>
                    <!--提示信息-->
                    <Grid Grid.Column="1" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Height="20" Grid.Column="0" Margin="0,5,0,0"
                                   FontSize="12" FontFamily="font/msyh.ttc#Microsoft Yahei">
                            <Run xml:space="preserve">你有 </Run>
                            <Run x:Name="text_countOfNewMessage" Foreground="Red">1</Run>
                            <Run xml:space="preserve"> 条新的消息，请注意查收！</Run>
                        </TextBlock>
                        <TextBlock Name="button_openMessageBox" Text="查看消息盒子" Cursor="Hand"
                                   TextDecorations="Underline" FontSize="12" Foreground="#41829F"
                                   Grid.Column="1" Margin="10,3,0,0" FontFamily="font/msyh.ttc#Microsoft Yahei"
                                   VerticalAlignment="Center" MouseLeftButtonDown="GoToMessageBoxPage"></TextBlock>
                    </Grid>
                    <!--关闭按键-->
                    <Grid Height="16" Width="38" Grid.Column="1"
                          HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0">
                        <sdk:Label Content="关闭" FontSize="9" Foreground="#900"></sdk:Label>
                        <Image Source="img/cross_small.png"  Width="16" Height="16"
                               HorizontalAlignment="Right" VerticalAlignment="Top"></Image>
                        <Grid Name="button_closePromt" Height="16" Width="38" 
                              Background="White" Opacity="0" Cursor="Hand"></Grid>
                    </Grid>
                </Grid>
                <!--主体信息显示-->
                <Grid Name="body" Grid.Row="1">
                    
                </Grid>
                <!--版权信息-->
                <Grid Grid.Row="2" Height="100">
                    <TextBlock Text="版权所有 © 2013/2014" FontFamily="font/msyh.ttc#Microsoft Yahei"
                               VerticalAlignment="Center"></TextBlock>
                    <MediaElement Name="messageCall" AutoPlay="False" Volume="1" Source="music/MessageCall.wma"></MediaElement>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
