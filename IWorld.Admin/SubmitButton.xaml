<UserControl x:Class="IWorld.Admin.SubmitButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="normal">
            <Setter Property="Foreground" Value="#A59A92"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="hover">
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid x:Name="root" MinHeight="25" MinWidth="60" Cursor="Hand"
          MouseEnter="ShowHoverStyle" MouseLeave="ShowNormalStyle" MouseLeftButtonDown="Click">
        <Border CornerRadius="2" Background="#FF5D5351"></Border>
        <TextBlock Name="text_content" Text="按  键" HorizontalAlignment="Center" VerticalAlignment="Center"
                   Style="{StaticResource ResourceKey=normal}"></TextBlock>
    </Grid>
</UserControl>
