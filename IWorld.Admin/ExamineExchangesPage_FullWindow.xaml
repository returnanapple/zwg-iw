<controls:ChildWindow x:Class="IWorld.Admin.ExamineExchangesPage_FullWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:Admin="clr-namespace:IWorld.Admin"
           HasCloseButton="False">

    <ScrollViewer BorderThickness="0" Width="520" Height="380" VerticalScrollBarVisibility="Auto">
        <Grid Width="500">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Canvas x:Name="root" Width="500" Height="285">
                <TextBlock Text="标题：" Canvas.Left="119" Canvas.Top="3"></TextBlock>
                <TextBlock Text="名额：" Canvas.Left="119" Canvas.Top="24"/>
                <TextBlock Text="兑换单价：" Canvas.Left="95" Canvas.Top="45"/>
                <TextBlock Text="每人每次允许兑换数量：" Canvas.Left="23" Canvas.Top="66"/>
                <TextBlock Text="每人每天允许兑换次数：" Canvas.Left="23" Canvas.Top="87"/>
                <TextBlock Text="每人每天允许兑换总数量：" Canvas.Left="11" Canvas.Top="108"/>
                <TextBlock Text="每人允许参与总次数：" Canvas.Left="35" Canvas.Top="129"/>
                <TextBlock Text="每人允许兑换总数量：" Canvas.Left="35" Canvas.Top="152"/>
                <TextBlock Text="开始时间：" Canvas.Left="95" Canvas.Top="173"/>
                <TextBlock Text="持续天数：" Canvas.Left="95" Canvas.Top="194"/>
                <TextBlock Text="结束时间：" Canvas.Left="95" Canvas.Top="215"/>
                <TextBlock Text="暂停：" Canvas.Left="119" Canvas.Top="236"/>
                <TextBlock Text="过期自动删除：" Canvas.Left="71" Canvas.Top="257"/>

                <TextBlock Name="text_name" Text="18积分一个 最后三天跳楼大酬宾" Canvas.Left="177" Canvas.Top="3"/>
                <TextBlock Name="text_places" Text="0" Canvas.Left="177" Canvas.Top="24"/>
                <TextBlock Name="text_UnitPrice" Text="18" Canvas.Left="177" Canvas.Top="45"/>
                <TextBlock Name="text_EachPersonCanExchangeTheNumberOfTimes" Text="0" Canvas.Left="177" Canvas.Top="66"/>
                <TextBlock Name="text_EachPersonCanExchangeTheTimesOfDays" Text="0" Canvas.Left="177" Canvas.Top="87"/>
                <TextBlock Name="text_EachPersonCanExchangeTheNumberOfDays" Text="0" Canvas.Left="177" Canvas.Top="108"/>
                <TextBlock Name="text_EachPersonCanExchangeTheTimesOfAll" Text="0" Canvas.Left="178" Canvas.Top="129"/>
                <TextBlock Name="text_EachPersonCanExchangeTheNumberOfAll" Text="0" Canvas.Left="178" Canvas.Top="152"/>
                <TextBlock Name="text_beginTime" Text="2013年7月18日" Canvas.Left="178" Canvas.Top="173"/>
                <TextBlock Name="text_days" Text="10" Canvas.Left="178" Canvas.Top="194"/>
                <TextBlock Name="text_endTime" Text="2013年7月28日" Canvas.Left="178" Canvas.Top="215"/>
                <TextBlock Name="text_hide" Text="否" Canvas.Left="178" Canvas.Top="241"/>
                <TextBlock Name="text_autoDelete" Text="是" Canvas.Left="178" Canvas.Top="257"/>

                <Admin:SubmitButton Canvas.Left="430" Text="返  回" ClickEventHandler="BackToList" Canvas.Top="-1"/>

            </Canvas>
            <TextBlock Text="限制条件：" HorizontalAlignment="Left" Grid.Row="1" Margin="96,7,0,21"/>
            <Grid Name="tool_showConditions" Grid.Row="1" Width="260"
              VerticalAlignment="Top" Margin="177,0,63,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock Text="用户组等级" Grid.Column="0"></TextBlock>
                <TextBlock Text="1" Grid.Column="1" HorizontalAlignment="Center"></TextBlock>
                <TextBlock Text="2" Grid.Column="2" HorizontalAlignment="Center"></TextBlock>
            </Grid>
            <TextBlock Name="title_showPrize" Text="奖品：" HorizontalAlignment="Left" Grid.Row="2" Margin="120,7,0,20"/>
            <Grid x:Name="tool_showPrize" Grid.Row="2" Width="260"
        	VerticalAlignment="Top" Margin="177,0,63,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <TextBlock Text="奖金" Grid.Column="0"/>
                <TextBlock Text="100.00" Grid.Column="1" HorizontalAlignment="Center"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</controls:ChildWindow>