<UserControl x:Class="IWorld.Admin.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:IWorld.Admin.Controls;assembly=IWorld.Admin.Controls"
    mc:Ignorable="d">

    <!--界面资源-->
    <UserControl.Resources>
        <!--以下是样式-->
        <!--主体框架样式-->
        <Style TargetType="Grid" x:Key="root">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="Black" Opacity="0"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!--以上是样式-->
    </UserControl.Resources>

    <!--外框架-->
    <ScrollViewer>
        <!--主体框架-->
        <Grid Style="{StaticResource ResourceKey=root}">
            <!--竖向滚屏触发器-->
            <i:Interaction.Triggers>
                <local:VerticalScrollTrigger/>
            </i:Interaction.Triggers>
            <!--主显示区-->
            <Grid Name="body">
            </Grid>
            <!--遮蔽层-->
            <Grid>
                <local:CoverFloorTool CanSee="{Binding IsBusy}"/>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
