<controls:ChildWindow xmlns:Admin="clr-namespace:IWorld.Admin"  x:Class="IWorld.Admin.ExamineUsersPage_DeleteUserPrompt"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30">
            <Run>警告：该操作将删除用户：</Run>
            <Run x:Name="text_username"></Run>
            <LineBreak></LineBreak>
            <Run>及其下属用户。</Run>
            <LineBreak></LineBreak>
            <LineBreak></LineBreak>
            <Run>警告：该操作为不可逆操作。</Run>
        </TextBlock>
        <Admin:SubmitButton Text="确  定" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"
                            Margin="20,26,10,0" ClickEventHandler="OKButton_Click"/>
        <Admin:SubmitButton Text="取  消" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top"
        	Margin="20,56,0,0" ClickEventHandler="CancelButton_Click"/>
    </Grid>
</controls:ChildWindow>