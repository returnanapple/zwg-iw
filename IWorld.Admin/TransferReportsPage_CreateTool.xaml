<controls:ChildWindow x:Class="IWorld.Admin.TransferReportsPage_CreateTool"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:Admin="clr-namespace:IWorld.Admin"
           HasCloseButton="False">

    <Canvas x:Name="root" Width="360" Height="110">
        <TextBlock Text="金额：" Canvas.Left="10" Canvas.Top="14"/>
        <TextBlock Text="备注：" Canvas.Left="10" Canvas.Top="44"></TextBlock>

        <TextBox x:Name="input_sum" Canvas.Left="65" Canvas.Top="10" Width="100"/>
        <TextBox Name="input_remark" Canvas.Left="65" Canvas.Top="40" Width="180" Height="55"
                 AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

        <Admin:SubmitButton Canvas.Left="290" Canvas.Top="10" Text="添  加" ClickEventHandler="Create" />
        <Admin:SubmitButton Canvas.Left="290" Canvas.Top="40" Text="取  消" ClickEventHandler="BackToList" />
    </Canvas>
</controls:ChildWindow>