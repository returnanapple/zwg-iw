<UserControl xmlns:Admin="clr-namespace:IWorld.Admin" x:Class="IWorld.Admin.PersonalReportPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    mc:Ignorable="d">

    <Grid x:Name="root" Width="912">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Canvas Width="912" Height="120" Grid.Row="0">
            <TextBlock Text="至" Canvas.Left="125" Canvas.Top="10" FontSize="14"></TextBlock>
            <toolkit:SystemColorsTheme Canvas.Top="10">
                <sdk:DatePicker Name="input_beginTime" Height="23" Width="120"/>
            </toolkit:SystemColorsTheme>
            <toolkit:SystemColorsTheme  Canvas.Left="144" Canvas.Top="10">
                <sdk:DatePicker Name="input_endTime" Height="23" Width="120"/>
            </toolkit:SystemColorsTheme>
            <RadioButton Name="input_timePeriod_month" GroupName="input_timePeriod" Content="月报表" Canvas.Top="53"
                         IsChecked="true" Checked="SelectForTimePeriod" />
            <RadioButton Name="input_timePeriod_day" GroupName="input_timePeriod" Content="日报表" Canvas.Top="53" 
                         Canvas.Left="67" Checked="SelectForTimePeriod" />
            <Admin:SubmitButton Text="搜   索" Canvas.Left="279" Canvas.Top="6" Height="30" Width="70" 
                                ClickEventHandler="SelcetForTime"/>
            <Admin:SubmitButton Text="重   置" Canvas.Left="367" Canvas.Top="6" Height="30" Width="70" 
                                ClickEventHandler="Reset"/>
            <TextBox Name="input_username" Width="120" Canvas.Left="472" Canvas.Top="9"/>
            <Admin:SubmitButton Text="查   找" Canvas.Left="607" Canvas.Top="6" Height="30" Width="70" 
            	ClickEventHandler="SelectForUsername"/>
        </Canvas>
        <Grid x:Name="tableBody" Width="912" Grid.Row="1"/>
    </Grid>
</UserControl>
